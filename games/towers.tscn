var isGaming := true


func _process(delta: float) -> void:
    if isGaming:
        scale.x -= (delta * 1.5)
        if scale.x <= 0:
            Game.score -= 50
            $\"..\".endgame()
    else:
        move_local_y(-50 * delta)
